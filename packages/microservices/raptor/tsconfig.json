{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "../../../",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@web-backend/auth/*": ["../../web-backend/src/auth/*"],
      "@web-backend/guards/*": ["../../web-backend/src/guards/*"]
    }
  },
  "include": ["src/**/*.ts", "config/**/*.ts", "test/**/*.ts"]
}
