{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "openpra/createNewUser-schema.json",
  "title": "CreateNewUser",
  "description": "A new user in the backend",
  "type": "object",
  "properties": {
    "firstName": {
      "description": "Firstname of user",
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "lastName": {
      "description": "Lastname of user",
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "username": {
      "description": "Username",
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "email": {
      "description": "Email of user",
      "type": "string",
      "minLength": 5,
      "maxLength": 255
    },
    "password": {
      "description": "Password of user",
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "roles": {
      "description": "An array of role ids for the user",
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 5,
        "maxLength": 255
      }
    }
  },
  "required": [
    "firstName",
    "lastName",
    "username",
    "email",
    "password",
    "roles"
  ]
}
