{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "title": "Command-line Options",
  "description": "Schema for command-line options",
  "type": "object",
  "properties": {
    "bdd": {
      "type": "boolean",
      "description": "Perform qualitative analysis with BDD"
    },
    "zbdd": {
      "type": "boolean",
      "description": "Perform qualitative analysis with ZBDD"
    },
    "mocus": {
      "type": "boolean",
      "description": "Perform qualitative analysis with MOCUS"
    },
    "prime-implicants": {
      "type": "boolean",
      "description": "Calculate prime implicants"
    },
    "probability": {
      "type": "boolean",
      "description": "Perform probability analysis"
    },
    "importance": {
      "type": "boolean",
      "description": "Perform importance analysis"
    },
    "uncertainty": {
      "type": "boolean",
      "description": "Perform uncertainty analysis"
    },
    "ccf": {
      "type": "boolean",
      "description": "Perform common-cause failure analysis"
    },
    "sil": {
      "type": "boolean",
      "description": "Compute the Safety Integrity Level metrics"
    },
    "rare-event": {
      "type": "boolean",
      "description": "Use the rare event approximation"
    },
    "mcub": {
      "type": "boolean",
      "description": "Use the MCUB approximation"
    },
    "limit-order": {
      "type": "integer",
      "description": "Upper limit for the product order"
    },
    "cut-off": {
      "type": "number",
      "description": "Cut-off probability for products"
    },
    "mission-time": {
      "type": "number",
      "description": "System mission time in hours"
    },
    "time-step": {
      "type": "number",
      "description": "Time step in hours for probability analysis"
    },
    "num-trials": {
      "type": "integer",
      "description": "Number of trials for Monte Carlo simulations"
    },
    "num-quantiles": {
      "type": "integer",
      "description": "Number of quantiles for distributions"
    },
    "num-bins": {
      "type": "integer",
      "description": "Number of bins for histograms"
    },
    "seed": {
      "type": "integer",
      "description": "Seed for the pseudo-random number generator"
    },
    "no-indent": {
      "type": "boolean",
      "description": "Omit indentation whitespace in output XML"
    },
    "verbosity": {
      "type": "integer",
      "description": "Set log verbosity"
    },
    "no-report": {
      "type": "boolean",
      "description": "Don't generate analysis report"
    },
    "output": {
      "type": "string",
      "description": "Path for the output/report file"
    }
  },
  "additionalProperties": false
}
